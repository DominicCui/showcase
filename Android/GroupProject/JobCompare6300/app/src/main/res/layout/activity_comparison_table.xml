<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/comparisonTable"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#283593"
    tools:context=".ComparisonTableActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/pageTitleID"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="0"
            android:layout_marginBottom="8dp"
            android:gravity="center|center_horizontal|center_vertical"
            android:text="Comparison table"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableLayout
                android:id="@+id/rankingTableID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/borders"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp">

                    <TextView
                        android:id="@+id/titleHeaderLabel"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:ems="10"
                        android:text="Title"
                        android:padding="5dp"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp"/>

                    <TextView
                        android:id="@+id/titleJob1"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:ems="10"
                        android:text=""
                        android:padding="5dp"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp"/>

                    <TextView
                        android:id="@+id/titleJob2"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:ems="10"
                        android:text=""
                        android:padding="5dp"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp"/>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/borders"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp">

                    <TextView
                        android:id="@+id/companyHeaderLabel"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:ems="10"
                        android:text="Company"
                        android:padding="5dp"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp"/>

                    <TextView
                        android:id="@+id/companyJob1"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:ems="10"
                        android:text=""
                        android:padding="5dp"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp"/>

                    <TextView
                        android:id="@+id/companyJob2"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:ems="10"
                        android:text=""
                        android:padding="5dp"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp"/>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/borders"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp">

                    <TextView
                        android:id="@+id/locationHeaderLabel"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:ems="10"
                        android:text="Location"
                        android:padding="5dp"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp"/>

                    <TextView
                        android:id="@+id/locationJob1"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:ems="10"
                        android:text=""
                        android:padding="5dp"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp"/>

                    <TextView
                        android:id="@+id/locationJob2"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:ems="10"
                        android:text=""
                        android:padding="5dp"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp"/>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/borders"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp">

                    <TextView
                        android:id="@+id/salaryHeaderLabel"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:ems="10"
                        android:text="Salary"
                        android:padding="5dp"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp"/>

                    <TextView
                        android:id="@+id/salaryJob1"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:ems="10"
                        android:text=""
                        android:padding="5dp"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp"/>

                    <TextView
                        android:id="@+id/salaryJob2"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:ems="10"
                        android:text=""
                        android:padding="5dp"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp"/>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/borders"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp">

                    <TextView
                        android:id="@+id/bonusHeaderLabel"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:ems="10"
                        android:text="Bonus"
                        android:padding="5dp"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp"/>

                    <TextView
                        android:id="@+id/bonusJob1"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:ems="10"
                        android:text=""
                        android:padding="5dp"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp"/>

                    <TextView
                        android:id="@+id/bonusJob2"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:ems="10"
                        android:text=""
                        android:padding="5dp"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp"/>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/borders"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp">

                    <TextView
                        android:id="@+id/teleworkHeaderLabel"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:ems="10"
                        android:text="Telework days"
                        android:padding="5dp"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp"/>

                    <TextView
                        android:id="@+id/teleworkJob1"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:ems="10"
                        android:text=""
                        android:padding="5dp"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp"/>

                    <TextView
                        android:id="@+id/teleworkJob2"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:ems="10"
                        android:text=""
                        android:padding="5dp"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp"/>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/borders"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp">

                    <TextView
                        android:id="@+id/leaveHeaderLabel"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:ems="10"
                        android:text="Leave time"
                        android:padding="5dp"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp"/>

                    <TextView
                        android:id="@+id/leaveJob1"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:ems="10"
                        android:text=""
                        android:padding="5dp"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp"/>

                    <TextView
                        android:id="@+id/leaveJob2"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:ems="10"
                        android:text=""
                        android:padding="5dp"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp"/>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/borders"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp">

                    <TextView
                        android:id="@+id/equityHeaderLabel"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:ems="10"
                        android:text="Equity"
                        android:padding="5dp"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp"/>

                    <TextView
                        android:id="@+id/equityJob1"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:ems="10"
                        android:text=""
                        android:padding="5dp"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp"/>

                    <TextView
                        android:id="@+id/equityJob2"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:ems="10"
                        android:text=""
                        android:padding="5dp"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp"/>
                </TableRow>

            </TableLayout>
        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center|bottom"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/backButton"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:onClick="openJobRankings"
                android:text="Back" />

            <Button
                android:id="@+id/cancelButton"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:onClick="openMainMenu"
                android:text="Cancel" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>